@model IEnumerable<WebApplication1.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="row">
    @foreach (var employee in Model)
    {
        var defaultImagePath = Url.Content("/Images/employee.png");
        var photoPath = employee.PhotoPath != null ? Url.Content("~/Images/" + employee.PhotoPath) : defaultImagePath;

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>

                <img class="card-img-top" src="@photoPath" 
                asp-append-version="true" height="250" width="75">
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
